@model Foundry.Domain.Dto.OrgnisationWithProgramTypeDto;
<div id="home" class="tab-pane active">

    <div class="detail-information">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Organization name*:</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.OrganisationName, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.OrganisationName)
                                           </div>
                </div>
            </div>
            <!--3-->
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Address</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.Address)
                                            </div>
                </div>
            </div>
            <!--3-->
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Website</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.Website, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.Website)
                                           </div>
                </div>
            </div>
            <!--3-->

        </div>
        <!--row-->
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Contact name</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.ContactName)
                                           </div>
                </div>
            </div>
            <!--3-->
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Contact title</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.ContactTitle, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.ContactTitle)
                                           </div>
                </div>
            </div>
            <!--3-->
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Contact number</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.ContactNumber)
                                            </div>
                </div>
            </div>
            <!--3-->
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Contact email address</label>
                    <div class="form-group-inner">
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.EmailAddress)
                                           </div>
                </div>
            </div>
            <!--3-->

        </div>
        <!--row-->

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group">
                    <label>Description/ Remarks</label>
                    <div class="form-group-inner">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(m => m.Description)
                                          </div>
                </div>
            </div>
            <!--3-->

        </div>
        <!--row-->

        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label>Program types</label>
                    <div class="program-list">
                        @Html.DropDownList("ProgramType", new SelectList(ViewBag.ProgramType, "Id", "ProgramTypeName"))

                        
                        <span id="spnselectedprogram"></span>
                    </div>
                </div>
            </div>
            <!--3-->

        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="custom-right">
                    <button type="submit" class="btn btn-primary btn-login mt-3" onclick="window.location.href='dashboard.html'">ADD</button>

                </div>

            </div>
            <!--row-->
        </div>
    </div>
</div>

<!-- Initialize the plugin: -->
<script src="~/js/CreateOrganisation.js"></script>
