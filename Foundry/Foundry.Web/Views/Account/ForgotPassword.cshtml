@model Foundry.Web.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<div class="login-box">
    <div class="head-box">
        <img src="~/images/login-logo.png">
    </div>
    <div class="head-title">
        <h3>Forgot Password</h3>
    </div>
    @if (ViewBag.MessageResponse != null)
    {
        <div id="dvResponse" class="alert @(@ViewBag.StatusResponse!=null && @ViewBag.StatusResponse==1 ? "alert-success" : "alert-danger")">
            @ViewBag.MessageResponse
        </div>
    }
    @using (Html.BeginForm("ForgotPassword", "Account"))
    {
        <div class="form-group">
           
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "Email Address" })
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="clearfix"></div>
        <div class="form-group form-group-submit text-center">
            <button type="submit" class="btn btn-primary btn-login">SEND RESET LINK</button>
        </div>
    }
</div>