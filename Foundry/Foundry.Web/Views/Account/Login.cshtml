@model Foundry.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<div class="login-box">
    <div class="head-box">
        <img src="~/images/login-logo.png">
    </div>
    <div class="head-title">
        <h3>Log In</h3>
    </div>
    @if (ViewBag.StatusResponse != null)
    {
        <div id="dvResponse" class="alert @( @ViewBag.StatusResponse==true ? "alert-success" : "alert-danger")">
            @ViewBag.MessageResponse
        </div>
    }
    @using (Html.BeginForm("Login", "Account"))
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "Email Address", @maxlength = 80 })
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="form-group form-group-last">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @maxlength = 15 })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
            <div class="links"> @Html.ActionLink("Forgot Password ?", "ForgotPassword", "Account") </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group form-group-submit text-center">
            @Html.HiddenFor(m => m.IsLink)
            @Html.HiddenFor(m => m.Id)
            <button type="submit" class="btn btn-primary btn-login">LOG IN</button>
        </div>
    }
</div>

