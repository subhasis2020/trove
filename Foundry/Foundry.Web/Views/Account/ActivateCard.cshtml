@model Foundry.Web.Models.CardActivationModel
@{
    ViewData["Title"] = "ActivateCard";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<div class="login-box">
    <div class="head-box">
        <img src="~/images/login-logo.png">
    </div>
    <div class="head-title">
        <h2>Activate Card</h2>
    </div>
    @if (ViewBag.MessageResponse != null)
    {
        <div id="dvResponse" class="alert @(@ViewBag.StatusResponse!=null && @ViewBag.StatusResponse==1 ? "alert-success" : "alert-danger")">
            @ViewBag.MessageResponse
        </div>
    }
    @using (Html.BeginForm("ActivateCard", "Account"))
    {
        <div class="form-group">

            @Html.TextBoxFor(m => m.AccessCode, new { @class = "form-control", @placeholder = "Access Code" })
            @Html.ValidationMessageFor(m => m.AccessCode)
        </div>
        <div class="clearfix"></div>
        <div class="form-group form-group-submit text-center">
            <button type="submit" class="btn btn-primary btn-login">Activate</button>
        </div>
    }
</div>

