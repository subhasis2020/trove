                    <label class="switch">
                        @Html.CheckBoxFor(m => m.IsAutoReload)
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
        <!--row-->


        <span id="spnErrorDroppedAmount" style="display:none;" class="error">Please select for the amount drop.</span>

        <div class="amount-options1 amount-option-filled">
            @{string styleAuto = "";}


            <div class="row dvAutoReloadOptions_box" id="dvAutoReloadOptions" style="@styleAuto">
                <label class="head head_balance col-sm-12">When your visa balance drops below: </label>
                @Html.HiddenFor(m => m.CheckDroppedAmount)
                <div class="col-sm-6 col-md-5 col-lg-3">
                    <div class="input-amount input-currency">
                        <span class="currency-amount">$</span>
                        @Html.TextBoxFor(m => m.AutoReloadAmount, new { @class = "form-control form-control-sm input ForNumericOnly", @placeholder = "Enter amount to be refilled" })
                    </div>
                    @*@Html.ValidationMessageFor(m => m.AutoReloadAmount)*@
                    <span id="spnErrorAutoReload" style="display:none;" class="error">Please enter auto reload amount.</span>
                </div>
                <div class="col-sm-3 col-md-3 col-lg-2 custom-load">
                    <label class="btn-custom-bx beds-baths-1 radio-active1 autoLabel labelAutoReload20">
                        <input type="radio" name="options1" id="option11" autocomplete="off">

                        <span class="icon icon-blank-space"></span>
                        <span class="choose-no-point choose_autoreload 50">$20</span>
                    </label>

                </div>
                <div class="col-sm-3 col-md-3 col-lg-2 custom-load">
                    <label class="btn-custom-bx beds-baths-1 radio-active1 autoLabel labelAutoReload50">
                        <input type="radio" name="options1" id="option12" autocomplete="off">

                        <span class="icon icon-blank-space"></span>
                        <span class="choose-no-point choose_autoreload 50">$50</span>
                    </label>

                </div>
                <div class="col-sm-3 col-md-3 col-lg-2 custom-load">
                    <label class="btn-custom-bx beds-baths beds-baths-1 radio-active1 autoLabel labelAutoReload100">
                        <input type="radio" name="options1" id="option13" autocomplete="off">
                        <span class="icon icon-blank-space"></span>
                        <span class="choose-no-point choose_autoreload 100">$100</span>
                    </label>

                </div>
                <div class="col-sm-3 col-md-3 col-lg-2 custom-load">
                    <label class="btn-custom-bx beds-baths beds-baths-1 radio-active1 autoLabel labelAutoReload150">
                        <input type="radio" name="options1" id="option14" autocomplete="off">
                        <span class="icon icon-blank-space"></span>
                        <span class="choose-no-point choose_autoreload 150">$150</span>
                    </label>

                </div>
                <div class="col-sm-3 col-md-3 col-lg-2 custom-load">
                    <label class="btn-custom-bx beds-baths beds-baths-1 radio-active1 autoLabel labelAutoReload200">
                        <input type="radio" name="options1" id="option15" autocomplete="off">
                        <span class="icon icon-blank-space"></span>
                        <span class="choose-no-point choose_autoreload 200">$200</span>
                    </label>

                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-4 col-lg-12 pl0">
                        <button id="myBtn" class="btn btn-primary">Select Payment Mode</button>
                      
                        <button type="submit" id="btnCancelAutoReload" class="btn btn-primary float-right btn-login mt-3">Cancel RULE</button>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8 pl0">
                    <label class="custom_check_box mt-3">
                    </label>
                </div>
                <div class="col-sm-1 col-md-1 col-lg-1 pl0">
                    @Html.HiddenFor(m => m.ReloadUserId)
                    @Html.HiddenFor(m => m.ReloadRequestId)
                    @Html.HiddenFor(m => m.ProgramId)
                    @Html.HiddenFor(m => m.AccountReloadSrNo)
                    @Html.Hidden("SelectedBankStatus")
                    @Html.HiddenFor(m => m.BenefactorUserId)
                    @Html.HiddenFor(m => m.CardToken)

                </div>
            </div>
            <div class="row ad_money">
                <span id="spnRefreshBankAccount">
                    @await Component.InvokeAsync("AddBankBalanceReload", new { id = ViewBag.UserId, reloadRequestId = ViewBag.ReloadRequestId, programId = ViewBag.ProgramId, LoggedId = ViewBag.LoggedUserId })
                </span>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-12 pl0">
                    <button type="submit" style="display:none;" id="btnReloadAmount" class="btn btn-primary float-right btn-login mt-3">PROCEED WITH PAYMENT</button>
                </div>
            </div>
        </div>
        <!--first-->
    </div>

}

