@model Foundry.Web.Models.ReloadRequestModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmReloadAmountform", @name = "frmReloadAmountform" }))
{
    
    <div class="custom-cash-amount">
        <div class="cash-amount payment-inputs add-bank-account">
            <label class="head">Choose Account: </label>
            @Html.DropDownListFor(m => m.ProgramAccountIdSelected, ViewBag.ProgramAccountsUser as List<SelectListItem>, " -- Please select account -- ", new { @class = "form-control form-control60" })
