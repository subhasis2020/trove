@using Foundry.Domain;
@model Foundry.Web.Models.PlanModel;
@{
}
<div class="tab-content">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @name = "form" }))
    {
        <div id="add-plans" class="tab-pane fade active show" aria-expanded="false">
            <div class="detail-information prog-list pb20">
                <div class="title-section title-section01">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Add Plan</h2>
                        </div>
                    </div>
                </div>

                <div class="detail-information1 mt-3">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Plan name*</label>
                                <div class="form-group-inner">
                                    @Html.TextBoxFor(x => x.name, new { @class = "form-control form-control-custom", @maxlength = "100" })
                                    @Html.ValidationMessageFor(x => x.name)
                                </div>
                            </div>
                        </div>
                        <!--3-->
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Start for plan*</label>
                                <div class="form-groups-picker form-group-date ">
                                    @Html.TextBoxFor(x => x.startDate, new { @class = "form-control form-control-custom datetimepicker", @readonly = "true", @placeholder = "MM/DD/YYYY", @maxlength = "10" })
                                    @Html.ValidationMessageFor(x => x.startDate)
                                </div>
                            </div>
                        </div>
                        <!--3-->
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>Time*</label>

                                <div class="form-group-inner ">
                                    <div class="input-group bootstrap-timepicker">
                                        @Html.TextBoxFor(x => x.startTime, new { @class = "form-control form-control-custom input-small timepicker", @readonly = "true" })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                    </div>
                                    @Html.ValidationMessageFor(x => x.startTime)

                                </div>
                            </div>
                            <!--3-->



                        </div>
                        <!--row-->
                    </div>

                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>Client ID*</label>
                                <div class="form-group-inner">
                                    @Html.TextBoxFor(x => x.clientId, new { @class = "form-control form-control-custom" })
                                    @Html.ValidationMessageFor(x=>x.clientId)
                                </div>
                            </div>
                        </div>
                        <!--3-->
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>Plan ID</label>
                                <div class="form-group-inner">
                                    @Html.TextBoxFor(x => x.planId, new { @class = "form-control form-control-custom", @readonly = "true" })
                                </div>
                            </div>
                        </div>
                        <!--3-->
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>End for plan*</label>
                                <div class="form-groups-picker form-group-date ">
                                    @Html.TextBoxFor(x => x.endDate, new { @class = "form-control form-control-custom datetimepicker", @readonly = "true", @placeholder = "MM/DD/YYYY", @maxlength = "10" })
                                    @Html.ValidationMessageFor(x => x.endDate)

                                </div>
                                <span id="spnEndDateGreater" style="display:none;" class="field-validation-error">
                                    <span>End date must be greater than start date.</span>
                                </span>
                            </div>
                        </div>
                        <!--3-->
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>Time*</label>
                                <div class="form-group-inner ">
                                    <div class="input-group bootstrap-timepicker">
                                        @Html.TextBoxFor(x => x.endTime, new { @class = "form-control form-control-custom input-small timepicker", @readonly = "true" })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                    </div>
                                    @Html.ValidationMessageFor(x=>x.endTime)

                                </div>
                            </div>
                        </div>
                        <!--3-->

                    </div>
                    <!--row-->
                    <div class="row">

                        <!--3-->
                        <div class="col-sm-12 col-md-12 col-lg-10">
                            <div class="form-group">
                                <label>Description/ Remarks</label>
                                <div class="form-group-inner form-group-select">
                                    @Html.TextAreaFor(x => x.description, new { @class = "form-control form-control-custom", @maxlength = "225" })
                                </div>
                            </div>
                        </div>
                        <!--3-->

                    </div>
                    <!--row-->

                    <div class="row">

                        <!--3-->
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label>Add account(s) to plan*</label>
                                <div class="form-group-inner form-group-select">
                                    @Html.ListBoxFor(m => m.selectedProgramAccount, Model.programAccount.Select(x => new SelectListItem { Text = x.accountName, Value = x.id.ToString() }), new { @multiple = "multiple" })
                                    @Html.ValidationMessageFor(m=>m.selectedProgramAccount)
                                </div>
                            </div>
                        </div>
                        <!--3-->

                    </div>
                    <!--row-->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="custom-right mt5">
                                @Html.HiddenFor(x=>x.id)
                                @Html.HiddenFor(x=>x.Jpos_PlanEncId)
                                <button type="submit" class="btn btn-primary btn-login  mt-3 btn-add-plan">ADD</button>
                            </div>
                        </div>
                        <!--row-->
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<link href="~/css/bootstrap-timepicker.min.css" rel="stylesheet" />
<script src="~/js/bootstrap-datepicker.min.js"></script>
<script src="~/js/bootstrap-timepicker.min.js"></script>
<link rel="stylesheet" href="~/css/bootstrap-multiselect.css" type="text/css">
<script type="text/javascript" src="~/js/bootstrap-multiselect.js"></script>